  <% if current_user.favorite?(micropost) %>
    <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: { method: :delete, style: 'display: inline-block;' }) do |f| %>
      <%= hidden_field_tag :micropost_id ,micropost.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build, html: { style: 'display: inline-block;' }) do |f| %>
      <%= hidden_field_tag :micropost_id ,micropost.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>